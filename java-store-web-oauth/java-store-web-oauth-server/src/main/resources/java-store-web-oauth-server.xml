		http://www.core.cn/schema/rabbitmq http://www.core.cn/schema/rabbitmq/spring-rabbitmq.xsd"
	default-lazy-init="true">
	
	<!-- import -->
	<import resource="classpath*:/java-store-web-oauth-server-import.xml" />
	
	<context:annotation-config />
	<context:component-scan base-package="com.java">
        <context:exclude-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
    </context:component-scan>
	<bean id="java-store-web-oauth-service.properties" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="ignoreUnresolvablePlaceholders" value="true" />
		<property name="location">
			<value>classpath:java-store-web-oauth-service.properties</value>
		</property>
	</bean>
	
